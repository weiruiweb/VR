/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#333;
}
view{
	color:#ccc;
}
.user_infor{
	height:96rpx;
	line-height:96rpx;
	background:#262626;
	border-bottom:solid 1px #dcdcdc;
	align-items:center;
	}
.user_right {
	width:40%;
	height: 100%;
}
.user_icon{
	width:36rpx;
	height:36rpx;
	margin-right:10rpx;
}
.member{
	width:100%;
	height:292rpx;
	position: relative;
	margin:20rpx 0;
}
.member image{
	width:100%;
	height:100%;
}
.member_cont{
	height:292rpx;
	position: absolute;
	top:0;
	left: 0;
}
.member_type{
	width:100%;
	height: 100rpx;
}
.type_left{
	width:50%;
	font-size:34rpx;
}
.type_right{
	text-align: right;
}
.member_detail{
	height:36%;
	padding:2% 0;
	overflow:hidden;
}
.date text{
	margin-right: 20rpx;
}