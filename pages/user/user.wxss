/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#333;
}
view{
	color:#ccc;
}
.user_banner{
	width:100%;
	height:220rpx;
}
.user_box{
	height:116rpx;
}
.banner_left{
	width:33%;
	height:100%;

}
.banner_right{
	width:67%;
	height:116rpx;
}
.banner_right>view{
	width:100%;
	height:50%;
}
.user_img{
	width:116rpx;
	height:116rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0px auto;
}
.credit_left{
	width:50%;
	height:100%;
}
.credit_left image{
	width:24rpx;
	height:30rpx;
	margin-right:10rpx;
}
.credit_in{
	width:100%;
	height:94rpx;
}
.user_infor{
	height:96rpx;
	line-height:96rpx;
	background:#262626;
	border-bottom:solid 1px #dcdcdc;
	align-items:center;
	}
.user_right {
	width:40%;
	height: 100%;
}
.user_all{
	margin-top:12rpx;
}
.user_all .bg{
	border-radius: 20rpx;
	margin-bottom: 20rpx;
}
.user_icon{
	width:36rpx;
	height:36rpx;
	margin-right:10rpx;
}
.navbar .this-text{
	color:#3ab3c3;
}