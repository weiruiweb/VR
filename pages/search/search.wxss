@import "../../wxParse/wxParse.wxss";
view{
	color:#f2f2f2;
}
page{
	width:100%;
	min-height:100%;
	background: #333;
}
.search{
	width:83%;
	padding:0 3%;
	height:68rpx;
	background:#262626;
	border-radius:30rpx;
	margin:20rpx auto;
}
.search input{
	width:94%;
	height:100%;
	color:#f2f2f2;
}
.search .search_btn{
	width:6%;
	height:100%;
}
