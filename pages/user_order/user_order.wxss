/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#333;
}
view{
	color:#ccc;
}
.tab{
	height:80rpx;
	border-bottom:solid 1px #3c3c3c;
}
.tab_item{
	width:33.33%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tab_this{
	color:#3ab3c3;
	border-bottom:solid 1px #3ab3c3;
}
.tab_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}
.product{
	border-bottom:solid 1px #3c3c3c;
}
.product_box{
	height:230rpx;
}
.product_detail{
	width:100%;
	height:140rpx;
}
.product_left{
	width:27.5%;
	height:156rpx;
}
.product_left image{
	width:156rpx;
	height:156rpx;
	border-radius:10rpx;
}
.product_right{
	width:72.5%;
	height:156rpx;
}
.order_handle{
	width:30%;
}
.test{
	height:100%;
	display:flex;
	flex-flow: row wrap;
	align-content:space-between;
}
.product_top{
	height:40%;
}
.submit_info{
	width:166rpx;
	height:70rpx;
	line-height:70rpx;
	margin:0;
	float:right;
	background:#fff;
	border:solid 1px #e83632;
	color:#666;
}
.order_tlt{
	height:78rpx;
	border-bottom:solid 1px #3c3c3c;
}
.tlt_left{
	width:60%;
	overflow:hidden;
}
.tlt_right{
	text-align:right;
}
.product_name,.product_price{
	width:50%;
}
.product_price{
	text-align:right;
}
.product_address{
	height:38%;
}
.product_detail text{
	margin-right:20rpx;
}
.note{
	margin-top:40rpx;
	line-height:40rpx;
	border-bottom:solid 1px #3c3c3c;
}
.cancel{
	width:160rpx;
	height:60rpx;
	border:solid 1px #e0e0e0;
	border-radius:10rpx;
	text-align:center;
	line-height:60rpx;
	float:right;
	margin-top:30rpx;
}